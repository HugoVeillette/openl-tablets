	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<import resource="classpath:openl-ruleservice-cassandra-beans.xml" />

	<!-- Logging request/response feature to external storage feature beans. -->

	<!-- Cassandra logging store service bean. -->
	<bean id="cassandraLoggingInfoStoreService" class="org.openl.rules.ruleservice.logging.cassandra.CassandraLoggingInfoStoreService" lazy-init="true">
		<property name="cassandraOperations" ref="cassandraTemplate"/>
	</bean>
	
