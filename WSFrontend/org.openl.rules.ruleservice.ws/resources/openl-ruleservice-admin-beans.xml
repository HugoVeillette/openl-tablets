<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="configInfoBean" class="org.openl.rules.ruleservice.rest.ConfigInfoBean">
        <property name="deployerEnabled" value="${ruleservice.deployer.enable}"/>
    </bean>

    <bean id="rulesDeployerRestController" class="org.openl.rules.ruleservice.rest.RulesDeployerRestController" lazy-init="true">
        <constructor-arg name="rulesDeployerService" ref="rulesDeployerService"/>
        <constructor-arg name="ruleServiceManager" ref="ruleServiceManager"/>
    </bean>

    <bean id="rulesDeployerRestControllerInitializingBean" class="org.openl.rules.ruleservice.rest.RulesDeployerRestControllerInitializingBean">
        <property name="enabled" value="${ruleservice.deployer.enable}"/>
        <property name="baseAddress" value="/rules"/>
        <lookup-method name="getRulesDeployerRestController" bean="rulesDeployerRestController"/>
    </bean>

    <bean id="adminRestControllerInitializingBean" class="org.openl.rules.ruleservice.rest.AdminRestControllerInitializingBean">
        <constructor-arg>
            <bean class="org.openl.rules.ruleservice.rest.AdminRestController">
                <constructor-arg ref="ruleServiceManager"/>
                <constructor-arg ref="configInfoBean"/>
            </bean>
        </constructor-arg>
        <property name="baseAddress" value="/admin"/>
    </bean>

</beans>
