#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>deployable</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>src/main/openl</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>rules.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/openl/rules.xml</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <excludes>
        <exclude>org.openl.rules:org.openl.rules</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
