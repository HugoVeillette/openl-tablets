<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.openl.internal</groupId>
    <artifactId>openl-exclude-dependencies</artifactId>
    <version>0.0.0</version>
    <packaging>openl</packaging>

    <name>OpenL Plugin: exclude some dependencies</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <org.openl.version>@project.version@</org.openl.version>
    </properties>

    <dependencies>
        <!-- This dependency will be included to zip -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.7</version>
        </dependency>

        <!-- Dependencies below will be excluded from zip. -->

        <!-- Will filter by artifact name -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>4.1</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>

        <!-- Will filter by scope -->
        <dependency>
            <groupId>com.microsoft.sqlserver</groupId>
            <artifactId>sqljdbc4</artifactId>
            <version>4.0</version>
            <scope>runtime</scope>
        </dependency>

        <!-- Will filter by group name -->
        <!-- To check transitive dependencies with different group name not mentioned in exclusion (aopalliance) -->
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-core</artifactId>
            <version>4.2.3.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-web</artifactId>
            <version>4.2.3.RELEASE</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openl.rules</groupId>
                <artifactId>openl-maven-plugin</artifactId>
                <version>${org.openl.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <dependenciesThreshold>5</dependenciesThreshold>
                    <excludeGroupIds>
                        <param>org.springframework.security</param>
                    </excludeGroupIds>
                    <excludeArtifactIds>
                        <param>commons-lang</param>
                        <param>commons-collections4</param>
                    </excludeArtifactIds>
                    <excludeScopes>
                        <excludeScope>RUNTIME</excludeScope>
                    </excludeScopes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
