<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.openl.spring.env.PropertySourcesLoader"/>

    <bean id="propertiesProvider" class="org.openl.spring.env.PropertiesProvider">
        <constructor-arg name="propertyResolver" ref="environment"/>
    </bean>

    <bean id="appContextProvider" class="org.openl.spring.env.ApplicationContextProvider"/>

</beans>