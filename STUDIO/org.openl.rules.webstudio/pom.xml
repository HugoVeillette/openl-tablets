    <parent>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.studio-pom</artifactId>
        <version>5.20.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>org.openl.rules.webstudio</artifactId>
    <packaging>war</packaging>
    <name>OpenL - STUDIO - WebStudio</name>
    <description>OpenL WebStudio</description>
    <url>//openl-tablets.org</url>
    <properties>
        <war.name>openl-tablets-webstudio-${project.version}</war.name>
        <generate-application.properties>process-resources</generate-application.properties>
        <sonar.sources>src,webapp</sonar.sources>
    </properties>
    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.basepom.maven</groupId>
                <artifactId>duplicate-finder-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <checkCompileClasspath>false</checkCompileClasspath>
                    <checkRuntimeClasspath>true</checkRuntimeClasspath>
                    <checkTestClasspath>false</checkTestClasspath>
                    <failBuildInCaseOfConflict>true</failBuildInCaseOfConflict>
                    <ignoredDependencies>
                        <dependency>
                            <groupId>org.apache.poi</groupId>
                            <artifactId>poi-ooxml-schemas</artifactId>
                        </dependency>
                    </ignoredDependencies>
                    <ignoredClassPatterns>
                        <ignoredClassPattern>org.xmlpull.v1.XmlPullParser</ignoredClassPattern>
                        <ignoredClassPattern>org.xmlpull.v1.XmlPullParserException</ignoredClassPattern>
                        <ignoredClassPattern>org.apache.jackrabbit.commons.iterator.RangeIteratorAdapter</ignoredClassPattern>
                    </ignoredClassPatterns>
                    <ignoredResources>
                    	<ignoredResource>mozilla/public-suffix-list.txt</ignoredResource>
                    </ignoredResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assembly-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <ignoreDirFormatExtensions>true</ignoreDirFormatExtensions>
                            <descriptors>
                                <descriptor>assembly/assembly-jar.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>assembly-template</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                            <ignoreDirFormatExtensions>true</ignoreDirFormatExtensions>
                            <descriptors>
                                <descriptor>assembly/assembly-template.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
